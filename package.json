{
  "name": "@bcrl/veramo-sd-jwt",
  "version": "0.0.1",
  "source": "src/index.ts",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "type": "module",
  "keywords": [
    "veramo",
    "sd-jwt"
  ],
  "veramo": {
    "pluginInterfaces": {
      "ISDJwtPlugin": "./src/types/ISDJwtPlugin.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "generate-plugin-schema": "pnpm veramo dev generate-plugin-schema",
    "start": "veramo server",
    "build:watch": "tsc -b --watch",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "format": "pnpm dlx @biomejs/biome check --apply .",
    "clean": "rm -rf tmp && rm database.sqlite && rm -rf build && rm tsconfig.tsbuildinfo"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@veramo/cli": "^5.1.2",
    "@veramo/core": "^5.6.0",
    "@veramo/data-store": "^5.6.0",
    "@veramo/did-manager": "^5.1.2",
    "@veramo/did-provider-key": "^5.6.0",
    "@veramo/did-resolver": "^5.6.0",
    "@veramo/key-manager": "^5.1.2",
    "cross-env": "^7.0.3",
    "did-resolver": "^4.1.0",
    "typescript": "5.3.3",
    "vitest": "^1.3.1"
  },
  "files": [
    "build/**/*",
    "src/**/*",
    "README.md",
    "plugin.schema.json",
    "LICENSE"
  ],
  "dependencies": {
    "@sd-jwt/core": "next",
    "@sd-jwt/crypto-nodejs": "0.3.2-next.63",
    "@sd-jwt/types": "0.3.2-next.97",
    "@sd-jwt/utils": "next",
    "@types/node": "^20.11.20",
    "@veramo/core-types": "^5.1.2",
    "@veramo/did-provider-jwk": "^5.6.0",
    "@veramo/kms-local": "^5.6.0",
    "@veramo/utils": "^5.6.0",
    "@vitest/coverage-v8": "^1.3.1",
    "typeorm": "^0.3.20"
  }
}
